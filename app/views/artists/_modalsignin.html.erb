<div class="modal-header">
  <!-- Le h3 ne fonctionne plus, corriger l'erreur -->
  <h4 class="modal-title" id="myModalLabel">You are not signed in ðŸ˜±</h4>
  <!-- <button type="button" class="close" data-dismiss="modal">x</button> -->
</div>
<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div class="modal-body">
      <h6 class="modal-title" id="myModalLabel">Connect to your account</h6>
      <p></p>
      <%= f.text_field :email, placeholder: "email" %>
      <%= f.password_field :password, placeholder: "password" %>
      <p></p>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      <p></p>
      <%= link_to "Forgot your password?", new_password_path(:user) %>
      <%= f.submit 'Login', class: "btn btn-primary" %>
  </div>
  <div class="modal-footer d-flex justify-content-between">
    <h6 class="modal-title" id="myModalLabel">Or create an account</h6>
    <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-warning' %>
  </div>
<% end %>
